FROM python:3.10

WORKDIR /app

ARG DB_NAME
ARG DB_USER
ARG DB_PASSWORD
ARG DB_HOST
ARG REDIS_HOST
ARG DB_PORT
ARG SECRET_KEY
ARG ENVIRONMENT_TYPE

ENV DB_NAME $DB_NAME
ENV DB_USER $DB_USER
ENV DB_PASSWORD $DB_PASSWORD
ENV DB_HOST $DB_HOST
ENV REDIS_HOST $REDIS_HOST
ENV DB_PORT $DB_PORT
ENV SECRET_KEY $SECRET_KEY
ENV ENVIRONMENT_TYPE $ENVIRONMENT_TYPE

COPY ./restaurant_visit_diary /app

RUN pip install -r requirements.txt

CMD ["bash", "-c", "celery -A restaurant_visit_diary worker -l info"]

EXPOSE 8000 8001
